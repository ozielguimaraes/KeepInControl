<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    x:Class="KeepInControl.Resources.Themes.DefaultTheme"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <x:String x:Key="FontOfIcons">FontAwesome</x:String>

    <Color x:Key="Background">#523CF8</Color>
    <Color x:Key="BackgroundDark">#110281</Color>

    <Color x:Key="Primary">#16110D</Color>
    <Color x:Key="Secondary">#C4C4C4</Color>
    <Color x:Key="Ternary">#523CF8</Color>
    <Color x:Key="Quaternary">#F76654</Color>

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Resources/Styles/SizeStyle.xaml" />
        <ResourceDictionary Source="/Resources/Styles/PageStyle.xaml" />
        <ResourceDictionary Source="/Resources/Styles/LabelStyle.xaml" />
        <ResourceDictionary Source="/Resources/Styles/EntryStyle.xaml" />
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>